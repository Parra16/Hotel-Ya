<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mishabitaciones.MisHabitacionesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis Habitaciones"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_camera"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/idMisHabitacionesImageViewFotoHabitacion"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_menu_camera"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo/Nombre"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <EditText
                            android:id="@+id/idMisHabitacionesEditTextTipoNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Double, Queen"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Precio"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:gravity="left"/>

                            <EditText
                                android:id="@+id/idMisHabitacionesEditTextPrecio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:hint="359.9"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Capacidad"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:gravity="left"/>

                            <EditText
                                android:id="@+id/idMisHabitacionesEditTextCapacidad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="4"/>

                        </LinearLayout>





                    </LinearLayout>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Piso"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMisHabitacionesEditTextPiso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="0002"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habitación"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMisHabitacionesEditTextHabitacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="B12"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total de Camas"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <EditText
                            android:id="@+id/idMisHabitacionesEditTextTotalCamas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="2"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Baño"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <Spinner
                            android:id="@+id/idMisHabitacionesSpinnerTipoBanio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:focusable="true"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Camas"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <Spinner
                            android:id="@+id/idMisHabitacionesSpinnerTipoCamas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:focusable="true"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balcón"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/idMisHabitacionesRadioButtonBalconSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Si" />

                        <RadioButton
                            android:id="@+id/idMisHabitacionesRadioButtonBalconNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No" />
                    </RadioGroup>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción Adicional"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <EditText
                    android:id="@+id/idMisHabitacionesEditTextDescripcionAdicional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="La habitación
                     es grande para 4 personas, 2 adultos y 2 niños"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disponibilidad"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/idMisHabitacionesRadioButtonDisponibilidadSi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Si" />

                            <RadioButton
                                android:id="@+id/idMisHabitacionesRadioButtonDisponibilidadNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/idMisHabitacionesRadioButtonStatusActivo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activo" />

                            <RadioButton
                                android:id="@+id/idMisHabitacionesRadioButtonStatusInactivo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inactivo" />
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/idMisHabitacionesButtonRegistrarHabitacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar Habitación"
                    android:layout_marginHorizontal="2dp"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>