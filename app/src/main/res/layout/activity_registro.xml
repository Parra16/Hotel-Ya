<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registro"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_slideshow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo Electrónico"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <EditText
                    android:id="@+id/idRegisterEditTextCorreoElectronico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="ejemplo@ejemplo.com"
                    android:focusable="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <EditText
                    android:id="@+id/idRegisterEditTextContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="********"
                    android:focusable="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/idRegisterImageViewFotoPerfil"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_menu_camera"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre(s)"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:layout_marginRight="6dp"/>

                        <EditText
                            android:id="@+id/idRegisterEditTextNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Daniel"
                            android:focusable="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellidos"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:layout_marginRight="6dp"/>

                        <EditText
                            android:id="@+id/idRegisterEditTextApellidos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:hint="Sánchez Pedraza"
                            android:focusable="true"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"/>

                    <EditText
                        android:id="@+id/idRegisterEditTextTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="722123456"
                        android:focusable="true"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="País"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"/>

                    <EditText
                        android:id="@+id/idRegisterEditTextPais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="México"
                        android:text="México"
                        android:enabled="false"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginHorizontal="6dp"/>

                    <Spinner
                        android:id="@+id/idRegisterSpinnerEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="true"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código Postal"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"/>

                    <EditText
                        android:id="@+id/idRegisterEditTextCodigoPostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="50000"
                        android:focusable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Domicilio"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"/>

                    <EditText
                        android:id="@+id/idRegisterEditTextDomicilio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Colonia San Cristobal"
                        android:focusable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Género"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"/>

                    <RadioGroup
                        android:id="@+id/idRegisterRadioGroupGenero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/idRegisterRadioButtonMasculino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masculino" />

                        <RadioButton
                            android:id="@+id/idRegisterRadioButtonFemenino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Femenino" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Nacimiento"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"/>

                    <EditText
                        android:id="@+id/idRegisterEdiTextFechaNacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:hint="12/12/1999"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo Usuario"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginRight="6dp"/>

                    <RadioGroup
                        android:id="@+id/idRegisterRadioGroupTipoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/idRegisterRadioButtonReservaciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reservaciones" />

                        <RadioButton
                            android:id="@+id/idRegisterRadioButtonHoteles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotel" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/idRegisterButtonRegistrar"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Registrar"
                        android:layout_marginHorizontal="2dp"/>

                    <Button
                        android:id="@+id/idRegisterButtonLimpiar"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Limpiar"
                        android:layout_marginHorizontal="2dp"/>

                    <Button
                        android:id="@+id/idRegisterButtonRegresarLogin"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Regresar a Login"
                        android:layout_marginHorizontal="2dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>