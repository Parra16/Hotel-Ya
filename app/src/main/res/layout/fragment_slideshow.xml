<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mi Hotel"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_camera"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMiHotelEditTextID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="XXXX-XXXX-XXXX-XXXX"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:enabled="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/idMiHotelImageViewFotoHotel"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_menu_camera"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Razón Social"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <EditText
                            android:id="@+id/idMiHotelEditTextRazonSocial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hotel del Rey"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teléfono"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        <EditText
                            android:id="@+id/idMiHotelEditTextTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="789123456"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="País"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMiHotelEditTextPais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="México"
                        android:hint="México"
                        android:enabled="false"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <Spinner
                        android:id="@+id/idMiHotelSpinnerEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Domicilio"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMiHotelEditTextDomicilio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Colonia Miguel Hidalgo"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código Postal"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMiHotelEditTextCodigoPostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="50000"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coordenadas GPS"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <EditText
                    android:id="@+id/idMiHotelEditTextCoordenadasGPS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="41.40338, 2.17403."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calificación"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMiHotelEditTextCalificacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="5"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción Adicional"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <EditText
                    android:id="@+id/idMiHotelEditTextDescripcionAdicional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cuenta con los mejores servicios del estado"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total de Habitaciones"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <EditText
                        android:id="@+id/idMiHotelEditTextTotalHabitaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="21"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:gravity="left"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/idMiHotelRadioButtonActivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activo" />

                        <RadioButton
                            android:id="@+id/idMiHotelRadioButtonInactivo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inactivo" />
                    </RadioGroup>

                </LinearLayout>

                <Button
                    android:id="@+id/idMiHotelButtonGuardarCambios"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Guardar Cambios"
                    android:layout_marginHorizontal="2dp"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:id="@+id/idMiHotelButtonLimpiar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Limpiar"
                    android:layout_marginHorizontal="2dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>