<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listado"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <RadioGroup
            android:id="@+id/idListarRadioGroupOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/idListarRadioButtonUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios"
                android:textSize="10dp"/>

            <RadioButton
                android:id="@+id/idListarRadioButtonHoteles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoteles"
                android:textSize="10dp"/>

            <RadioButton
                android:id="@+id/idListarRadioButtonHabitaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitaciones"
                android:textSize="10dp"/>

            <RadioButton
                android:id="@+id/idListarRadioButtonReservaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservaciones"
                android:textSize="10dp"/>

        </RadioGroup>

        <ListView
            android:id="@+id/idListarListViewListar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:smoothScrollbar="true" />

    </LinearLayout>

</FrameLayout>